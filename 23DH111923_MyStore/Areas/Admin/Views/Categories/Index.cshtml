@model IEnumerable<_23DH111923_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>DANH MỤC SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.CategoryID }) |
            @*@Html.ActionLink("Xem chi tiết", "Details", new { id=item.CategoryID }) |*@
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
