<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css"/>
<div class="bg">
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
            {
                <section class="container-fluid featureProd">
                    <h2 style="color: red" class="boldtext">Sản phẩm nổi bật</h2>
                    <div class="feature-container">
                        @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="fproduct-item" style="background-color: whitesmoke";>
                        <div>
                            <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID})">
                                <img src="@Html.DisplayFor(modelItem => product.ProductImage)"/>
                            </a>
                        </div>
                        <div>
                            <p class="prodPrice">
                                @Html.DisplayFor(modelItem => product.ProductPrice)
                            </p>
                            <p class="prodName">
                                @Html.DisplayFor(modelItem => product.ProductName)
                            </p>
                            <p class="prodCate">
                                @Html.DisplayFor(modelItem => product.Category.CategoryName)
                            </p>
                            <p class="prodSale">
                                Đã bán:&nbsp; @Html.DisplayFor(modelItem => product.OrderDetail.Count)
                            </p>
                        </div>
                    </div>
                }
                    </div>
                </section>
            }
</div>