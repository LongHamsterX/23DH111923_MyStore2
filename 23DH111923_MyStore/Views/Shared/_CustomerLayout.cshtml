<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />

    <title>Web bán hàng của Trần Hoàng Long</title>
    <script language="Javascript">
        let currentSlide = 0;
        const products = [
            {
                name: "Apple iPad Air 6 M2 11-Inch Wi-Fi",
                code: "12345",
                price: 16290000,
                status: "Còn hàng",
                img: "~/Content/Images/Ipad.png"
            },
            {
                name: "Galaxy Tab A9 Wifi",
                code: "12346",
                price: 3500000,
                status: "Còn hàng",
                img: "~/Content/Images/Ipad2.png"
            },
            {
                name: "Ipad Apple iPad 10.9-inch (10th Gen) Wi-Fi, 2022",
                code: "12347",
                price: 9490000,
                status: "Hết hàng",
                img: "~/Content/Images/Ipad3.png"
            }
        ];

        function showSlide(index) {
            let slides = document.getElementsByClassName('product-slide');
            if (index >= slides.length) {
                currentSlide = 0;
            } else if (index < 0) {
                currentSlide = slides.length - 1;
            } else {
                currentSlide = index;
            }

            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = 'none';
            }
            slides[currentSlide].style.display = 'block';

            document.getElementById("product-name").innerText = products[currentSlide].name;
            document.getElementById("product-code").innerText = products[currentSlide].code;
            document.getElementById("product-status").innerText = products[currentSlide].status;
            document.getElementById("dongia").value = products[currentSlide].price;
        }

        function nextSlide() {
            showSlide(currentSlide + 1);
        }

        function previousSlide() {
            showSlide(currentSlide - 1);
        }

        function decrease() {
            let quantityInput = document.getElementById("quantity");
            let currentValue = parseInt(quantityInput.value);
            if (currentValue > parseInt(quantityInput.min)) {
                quantityInput.value = currentValue - 1;
            }
        }

        function increase() {
            let quantityInput = document.getElementById("quantity");
            let currentValue = parseInt(quantityInput.value);
            if (currentValue < parseInt(quantityInput.max)) {
                quantityInput.value = currentValue + 1;
            }
        }

        function tinhtien() {
            var sl = parseFloat(document.getElementById("quantity").value);
            var dg = parseFloat(document.getElementById("dongia").value);
            window.document.getElementById("tt").value = sl * dg;
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style type="text/css">
        body {
            background-color: white;
            font-family: Arial, Helvetica, sans-serif;
        }

        #container {
            border: 2px solid;
            width: 1200px;
            background-color: white;
            margin: 0px auto;
            display: flex;
            flex-direction: column;
        }

        #banner {
            background-color: white;
            height: 130px;
            padding-left: 20px;
        }

        #navigator {
            border-top: 2px solid black;
            border-bottom: 2px solid black;
            background-color: white;
            padding-left: 30px;
        }

        #main-content {
            display: flex;
            flex-direction: row;
            padding: 20px;
        }

        #sidebar {
            width: 300px;
            background-color: white;
            margin-right: 20px;
        }

        .slide-container {
            position: relative;
            width: 100%;
        }

        .product-slide {
            display: none;
            width: 100%;
            height: auto;
        }

        .slide-container img {
            width: 100%;
            height: auto;
        }

        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            padding: 10px;
            color: black;
            background-color: lightgray;
        }

        .prev {
            left: 0;
        }

        .next {
            right: 0;
        }

        #product-info {
            width: 250px;
            border-left: 2px solid black;
            border-right: 2px solid black;
            padding: 10px;
            margin-right: 20px;
        }

        #content {
            flex: 1;
            background-color: white;
            padding: 20px;
        }

        #footer {
            background-color: white;
            border-top: 2px solid black;
            text-align: center;
            padding: 5px 0px;
        }
    </style>
</head>
<body onload="showSlide(0)">
    <div id="container">
        <div id="banner">
            <img src="~/Content/Images/banner.png" />
        </div>
        <div id="navigator">
            <i class="fas fa-store" style="font-size: 20px"></i> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; <img src="~/Content/Images/searchbar.png" />
        </div>
        <div id="main-content">
            <div id="sidebar">
                <div class="slide-container">
                    <img class="product-slide" src="~/Content/Images/Ipad.png" alt="Product 1" />
                    <img class="product-slide" src="~/Content/Images/Ipad2.png" alt="Product 2" />
                    <img class="product-slide" src="~/Content/Images/Ipad3.png" alt="Product 3" />
                    <span class="prev" onclick="previousSlide()">&#10094;</span>
                    <span class="next" onclick="nextSlide()">&#10095;</span>
                </div>
            </div>

            <div id="product-info">
                <h3 id="product-name">Thông tin sản phẩm</h3>
                <p>Mã sản phẩm: <span id="product-code">12345</span></p>
                <p>Tình trạng: <span id="product-status">Còn hàng</span></p>
            </div>

            <div id="content">
                <div>
                    <h3>Đơn giá của món hàng:</h3><input type="text" id="dongia" disabled />
                </div>
                <br />
                <div class="quantity-control">
                    <button onclick="decrease()">-</button>
                    <input type="number" id="quantity" value="1" min="1" max="100" />
                    <button onclick="increase()">+</button>
                </div>
                <br />
                <div>
                    <button onclick="tinhtien()">Thanh Toán </button> <i class="fas fa-shopping-cart" style="font-size: 20px"></i>
                    <br /><h3>Số tiền mà bạn cần phải thanh toán là: </h3><br />
                    <input type="text" id="tt" /> &nbsp &nbsp <i class="fas fa-dollar-sign" style="font-size: 25px; color: lawngreen"></i>
                </div>
            </div>
        </div>

        <div id="footer">
            <img src="~/Content/Images/footer.png" />
        </div>
    </div>
</body>
</html>
